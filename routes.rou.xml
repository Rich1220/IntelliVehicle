<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- 車輛類型定義 -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" maxSpeed="50" carFollowModel="Krauss"/>
    <vType id="truck" accel="1.3" decel="4.0" sigma="0.5" length="12" maxSpeed="30" carFollowModel="Krauss"/>
    
    <!-- 路線定義 -->
    <route id="route1" edges="edge1"/>
    
    <!-- 車流定義 -->
    <flow id="flow1" type="car" route="route1" begin="0" end="3600" vehsPerHour="600"/>
    <flow id="flow2" type="truck" route="route1" begin="0" end="3600" vehsPerHour="100"/>
    
    <!-- 個別車輛定義 -->
    <vehicle id="leader" type="car" route="route1" depart="5" departLane="0" departPos="100"/>
    <vehicle id="follower1" type="car" route="route1" depart="10" departLane="0" departPos="50"/>
    <vehicle id="follower2" type="car" route="route1" depart="15" departLane="0" departPos="20"/>
    
</routes>
